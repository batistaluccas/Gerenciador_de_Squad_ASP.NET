@model CursoASPNET.Models.UserViewModel

@{
    Layout = null;
    ViewData["Tittle"] = "Login";
}
<link href="~/css/login.css" rel="stylesheet" /> 

<section>

    <h1>Autenticação</h1>


    <form>
        <input type="email" id="email" name="email" value="@Model.Email" placeholder="Username/email"/>
        <input type="password" id="password" name="password" value="@Model.Password" placeholder="senha"/>
        <a href="/Login/Forgot">Esqueceu a senha? </a>
    
        <button id="btnLogin" type="submit" data-url="@Url.Action("Edit","User")">Login</button>

    <label>Não tem conta?</label> <a href="/Login/SignUp">Clique aqui </a>

    </form>

</section>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/login.js"></script>
    